    "version": "0.2.0",
    "configurations": [

        {
            "name": "Debug: Dev",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "--factory",
                "src:create_app",
                "--reload",
                "--host=0.0.0.0"
            ],
            "envFile": "${workspaceFolder}/.envfiles/dev.env",
            "jinja": true
        },
        {
            "name": "Debug: Prod",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "--factory",
                "src:create_app",
                "--reload",
                "--host=0.0.0.0"
            ],
            "envFile": "${workspaceFolder}/.envfiles/prod.env",
            "jinja": true
        }
    ]
}